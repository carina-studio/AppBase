<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CarinaStudio.MainWindow"
		Icon="/AppIcon.ico"
        Title="Application.Avalonia.Tests">

	<StackPanel Orientation="Vertical">
		<Button Command="{Binding $parent[Window].Test}" Content="Test"/>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="HasDialogs: " VerticalAlignment="Center"/>
			<TextBlock Text="{Binding $parent[Window].HasDialogs}" VerticalAlignment="Center"/>
		</StackPanel>

		<Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Margin="5" Width="150">
			<Rectangle Name="rect" Fill="Blue" Height="25" HorizontalAlignment="Left" Width="50">
				<Rectangle.RenderTransform>
					<TranslateTransform/>
				</Rectangle.RenderTransform>
			</Rectangle>
		</Border>

		<TextBox HorizontalAlignment="Left" Margin="5" Width="200"/>

	</StackPanel>
	
</Window>
